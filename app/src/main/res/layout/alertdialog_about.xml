    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="Icon graphic derived from:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
